{
  "name": {
    "en": "Smart Meter - GNM3D-RS485",
    "sv": "Smartmätare - GNM3D-RS485"
  },
  "class": "sensor",
  "capabilities": [
    "measure_current.L1",
    "measure_current.L2",
    "measure_current.L3",
    "meter_power"
  ],
  "capabilitiesOptions": {
    "measure_current.L1": {
      "title": {
        "en": "L1 Current",
        "sv": "L1 ström"
      }
    },
    "measure_current.L2": {
      "title": {
        "en": "L2 Current",
        "sv": "L2 ström"
      }
    },
    "measure_current.L3": {
      "title": {
        "en": "L3 Current",
        "sv": "L3 ström"
      }
    }
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "images": {
    "small": "{{driverAssetsPath}}/images/small.png",
    "large": "{{driverAssetsPath}}/images/large.jpg",
    "xlarge": "{{driverAssetsPath}}/images/xlarge.jpg"
  },
  "pair": [
    {
      "id": "configure_ip"
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "IP address",
        "sv": "IP-adress"
      },
      "children": [
        {
          "id": "host",
          "type": "text",
          "value": "0.0.0.0",
          "label": {
            "en": "IP address",
            "sv": "IP adress"
          }
        }
      ]
    },
    {
      "id": "loadBalanceType",
      "type": "text",
      "value": "EXTERNAL",
      "label": {
        "en": "Meter Load Balance Type",
        "sv": "Meter Load Balance Type"
      }
    }
  ]
}
